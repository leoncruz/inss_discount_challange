<div class="py-3">
  <%= turbo_frame_tag dom_id(contact) do %>
    <% if contact.reference? %>
      <p>
        <strong>Nome</strong>: <%= contact.name %>
      </p>
    <% end %>
    <p>
      <strong>Telefone</strong>: <%= contact.telephone %>
    </p>

    <div class="d-flex gap-2">
      <%= link_to t("helpers.actions.edit"), edit_contact_path(contact), class: "btn btn-outline-secondary" %>

      <%= button_to t("helpers.actions.destroy"),
        contact,
        method: :delete,
        data: { turbo_confirm: t("helpers.messages.are_you_sure"), turbo_frame: "_top" },
        class: "btn btn-outline-danger" %>
    </div>
  <% end %>
</div>
