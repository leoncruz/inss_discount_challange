<div class="row">
  <div class="col-sm-12 col-md-6">
    <div class="mb-3" data-controller="input-mask" data-input-mask-mask-value="00000-000">
      <%= form.label :cep, class: "form-label" %>
      <%= form.text_field :cep, class: "form-control", data: { input_mask_target: "input" } %>
    </div>
  </div>

  <div class="col-sm-12 col-md-6">
    <div class="mb-3">
      <%= form.label :street, class: "form-label" %>
      <%= form.text_field :street, class: "form-control" %>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-sm-12 col-md-6">
    <div class="mb-3">
      <%= form.label :number, class: "form-label" %>
      <%= form.text_field :number, class: "form-control" %>
    </div>
  </div>

  <div class="col-sm-12 col-md-6">
    <div class="">
      <%= form.label :city, class: "form-label" %>
      <%= form.text_field :city, class: "form-control" %>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-sm-12 col-md-6">
    <div class="mb-3">
      <%= form.label :neighborhood, class: "form-label" %>
      <%= form.text_field :neighborhood, class: "form-control" %>
    </div>
  </div>
  <div class="col-sm-12 col-md-6">
    <div class="mb-3">
      <%= form.label :state, class: "form-label" %>
      <%= form.select :state, t("states").invert, { prompt: true }, class: "form-select" %>
    </div>
  </div>
</div>
